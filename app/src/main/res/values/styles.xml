<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/BlueActionBar</item>
    </style>
    <style name="BlueActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/blue</item>

    </style>
    <style name="MySwitch" parent="Theme.AppCompat.Light">

        <item name="colorControlActivated">@color/blue</item>


        <item name="colorSwitchThumbNormal">@color/blue1</item>


        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

</resources>
